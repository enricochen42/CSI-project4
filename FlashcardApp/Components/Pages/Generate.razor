        margin-bottom: 0.5rem;
        color: #000;
    }

    .generating-content p {
        color: #555;
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .flashcards-container {
        padding: 2.5rem;
    }

    .flashcards-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .flashcards-title {
        font-size: 2rem;
        font-weight: 900;
        color: #000;
        margin: 0;
    }

